<!DOCTYPE html>
<html>
  <head>
    <title>HoaivietBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand" href="#">HoaiViet's Blog</a>
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Articles<span class="sr-only">(current)</span></a>
          </li>
        </ul>
        <%= form_tag(articles_path, :method => "get", id: "search-form", class: 'form-inline pull-xs-right') do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search title", class: 'form-control', type: 'text' %>
              <%= submit_tag "Search", class: 'btn btn-outline-success' %>
        <% end %>
      </nav>

      <%= yield %>

    </div>
  </body>
</html>
