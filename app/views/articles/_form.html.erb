<%= form_for(article) do |f| %> <% if article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <label>Blog title</label>
  <%= f.text_field :title, type: 'input', class: 'form-control', placeholder: 'Enter your title' %>
  <small id="titleHelp" class="form-text text-muted">This is your title in your blog post.</small>
</div>

<div class="form-group">
  <label>Blog body</label>
  <%= f.text_area :body, class: 'form-control', rows: 10%>
  <small id="bodyHelp" class="form-text text-muted">You can post your content using markdown format.</small>
</div>

<div class="actions">
  <%= f.submit "Update", class: 'btn btn-danger btn-sm'%>
  <%= link_to 'Show', @article, class: 'btn btn-warning btn-sm' %>
  <%= link_to 'Back', articles_path, class: 'btn btn-info btn-sm' %>
</div>
<% end %>

